<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="paperformat_sticky_note" model="report.paperformat">
    <field name="name">Sticky Note Size</field>
    <field name="default" eval="False"/>
    <field name="format">custom</field>
    <field name="page_height">80</field>
    <field name="page_width">80</field>
    <!-- <field name="orientation">Portrait</field> -->
    <field name="margin_top">5</field>
    <field name="margin_bottom">5</field>
    <field name="margin_left">5</field>
    <field name="margin_right">5</field>
    <!-- <field name="header_line" eval="False"/> -->
    <field name="header_spacing">0</field>
    <field name="dpi">90</field>
</record>

    <record id="action_report_hospital_appointment" model="ir.actions.report">
    <field name="name">Appointment Slip</field>
    <field name="model">hospital.appointment</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">ktm_hospital.report_appointment_template</field>
    <!-- <field name="report_file">ktm_hospital.report_appointment_template</field>
    <field name="print_report_name">'Slip - %s' % (object.reference)</field> -->
    <field name="binding_model_id" ref="model_hospital_appointment"/>
    <!-- <field name="binding_type">report</field> -->
    <field name="paperformat_id" ref="paperformat_sticky_note"/>
</record>

    <template id="report_appointment_template">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.basic_layout">
                <div class="page" style="font-size: 10px; font-family: sans-serif;">
                    <div class="text-center" style="border-bottom: 1px solid black; margin-bottom: 5px;">
                        <h6 style="margin:0;">APPOINTMENT</h6>
                        <strong t-field="o.reference"/>
                    </div>

                    <h6 style="margin:0;">Patient Information</h6>
                    <div style="margin-bottom: 5px;">
                        <strong>Patient:</strong> <span t-field="o.patient_id.name"/><br/>
                        <strong>Age:</strong> <span t-field="o.patient_age"/><br/>
                        <strong>DOB:</strong> <span t-field="o.patient_dob"/><br/>
                        <strong>Gender:</strong> <span t-field="o.patient_gender"/> | 
                        <strong>Blood Group:</strong> <span t-field="o.patient_blood_group"/><br/>
                        <strong>Marital Status:</strong> <span t-field="o.patient_marital_status"/>
                    </div>

                    <h6 style="margin:0;">Appointment Details</h6>
                    <div style="margin-bottom: 5px;">
                        <strong>Date:</strong> <span t-field="o.appointment_date"/><br/>
                        <strong>Doctor:</strong> <span t-field="o.doctor_id.name"/>
                    </div>

                    <div style="border: 1px solid #000; padding: 5px; min-height: 40px; font-style: italic;">
                        <span t-field="o.notes"/>
                    </div>

                    <div class="text-center" style="margin-top: 10px;">
                        <p style="font-size: 8px;">Please bring this slip for your visit.</p>
                    </div>
                </div>
            </t>
        </t>
    </t>
</template>
</odoo>