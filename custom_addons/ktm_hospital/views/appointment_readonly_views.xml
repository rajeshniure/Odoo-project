<?xml version="1.0" encoding="utf-8"?>
<odoo>
 
    <record id="view_hospital_appointment_readonly_list" model="ir.ui.view">
        <field name="name">hospital.appointment.readonly.list</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <list string="Appointment" edit="0" create="0" delete="0">
                            <field name="patient_id"/>
                            <field name="doctor_id" optional="show"/>
                            <field name="appointment_date" optional="show"/>
            </list>
        </field>
    </record>

    <record id="view_hospital_appointment_readonly_form" model="ir.ui.view">
        <field name="name">hospital.appointment.readonly.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment" edit="0" create="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="doctor_id"/>
                        </group>
                        <group>
                            <field name="appointment_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Prescription/Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_hospital_appointment_readonly" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'list', 'view_id': ref('view_hospital_appointment_readonly_list')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('view_hospital_appointment_readonly_form')})
    ]"/>
    </record>

</odoo>