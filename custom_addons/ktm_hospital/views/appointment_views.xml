<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hospital_appointment_list" model="ir.ui.view">
        <field name="name">hospital.appointment.list</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <list string="Appointment">
                <field name="reference" />
                <field name="patient_id" />
                <field name="doctor_id" optional="show" />
                <field name="appointment_date" optional="show" />
            </list>
        </field>
    </record>

    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
                <header>
                    <button name="action_print_report" type="object" string="Print"
                        class="oe_highlight" />
                    <button name="action_confirm" type="object" string="Confirm"
                        invisible="state != 'draft'" class="oe_highlight" />
                    <button name="action_ongoing" type="object" string="Ongoing"
                        invisible="state != 'confirmed'" class="oe_highlight" />
                    <button name="action_done" type="object" string="Done"
                        invisible="state != 'ongoing'" class="oe_highlight" />
                    <button name="action_cancel" type="object" string="Cancel"
                        invisible="state == 'done'" />
                    <field name="state" widget="statusbar"
                        statusbar_visible="draft,confirmed,ongoing,done" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="reference" readonly="True" />
                            <field name="patient_id"
                                invisible="state == 'done'"
                                options="{'no_create': True, 'no_create_edit': True}" />

                            <field name="patient_id"
                                readonly="True"
                                invisible="state != 'done'"
                                options="{'no_open': True, 'no_create': True}" />

                            <field name="doctor_id"
                                options="{'no_create': True, 'no_create_edit': True}"
                                invisible="state == 'done'" />

                            <field name="doctor_id"
                                readonly="True"
                                invisible="state != 'done'"
                                options="{'no_open': True, 'no_create': True}" />
                        </group>
                        <group>
                            <field name="appointment_date" readonly="state == 'done'" />
                        </group>
                        <group string="Patient Information">
                            <group>
                                <field name="patient_gender" />
                                <field name="patient_dob" />
                                <field name="patient_age" />
                            </group>
                            <group>
                                <field name="patient_blood_group" />
                                <field name="patient_marital_status" />
                            </group>

                        </group>
                    </group>
                    <notebook>
                        <page string="Prescription/Notes">
                            <field name="notes" readonly="state == 'done'" />
                        </page>
                    </notebook>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>